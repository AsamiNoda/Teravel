<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
	<h2>フォロワー</h2>
	<% if @users.count > 0 %>
	  	<table class='table'>
		  <thead>
		    <tr>
		      <th></th>
		    </tr>
		  </thead>
		  <tbody>
		    <% @users.each do |user| %>
		      <tr>
		        <td class="col-xs-3">
		        	<%= link_to user_path(user) do %>
		        		<%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", class: "img-rounded") %>
		        	<% end %>
		        </td>
		        <td><h3><%= link_to user.name, user_path(user)%></h3></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
		<% else %>
		  <p class="col-xs-offset-1">ユーザーはいません</p>
		<% end %>
		</div>
	</div>
</div>