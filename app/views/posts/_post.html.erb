  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), method: :delete, remote: true, class: "option__favorite-on" do %>
      <i class="fas fa-globe"></i></i><%= post.favorites.count %>
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), method: :post, remote: true, class: "option__favorite-off" do %>
      <i class="fas fa-globe"></i></i><%= post.favorites.count %>
    <% end %>
  <% end %>
