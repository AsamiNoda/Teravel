
<!-- いいね機能 -->
<div class="pull-left col-lg-6 col-md-6 col-sm-5 col-xs-6">
  <% if post.favorited_by?(current_user) %>
    <%= link_to post_favorites_path(post), method: :delete, remote: true, class: "option__favorite-on box" do %>
      <i class="fas fa-heart fav"></i><%= post.favorites.count %> いいね
    <% end %>
  <% else %>
    <%= link_to post_favorites_path(post), method: :post, remote: true, class: "option__favorite-off box" do %>
      <i class="far fa-heart fav"></i><%= post.favorites.count %> いいね
    <% end %>
  <% end %>
</div>
<!-- いいね機能 -->

