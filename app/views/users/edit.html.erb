<h1>Users#edit</h1>

<%= form_for(@user) do |f| %>
    <div class="field">
    <%= attachment_image_tag @user, :profile_image, :fill, 300, 250, fallback: "no_image.jpeg", size:"300x250" %>
    <%= f.attachment_field :profile_image %>
    </div>
	  <div class="field">
	    <%= f.label :name %><br>
	    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
	  </div>

	  <div class="field">
	    <%= f.label :introduction %><br>
	    <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
	  </div>

	  <div class="field">
	    <%= f.label :birthyear %><br>
	    <%= f.text_field :birthyear, autofocus: true, autocomplete: "birthyear" %>
	  </div>

	  <div class="field">
	    <%= f.label :email %><br>
	    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
	  </div>
	  <div class="action">
        <%= f.submit 'update' %>
    </div>
 <% end %>